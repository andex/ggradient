{
  "name": "GGradient",
  "version": "0.3.0",
  "description": "Simple way to create perfect gradient",
  "engines": {
    "sketch": ">=4.0"
  },
  "skpm": {
    "name": "GGradient",
    "manifest": "src/manifest.json",
    "main": "GGradient.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andex/ggradient.git"
  }
}
